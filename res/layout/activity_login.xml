<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginTop="5dip" android:layout_marginRight="5dip">
		<TextView android:id="@+id/txv_username" android:text="Email"  android:layout_marginLeft="10dip" 
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="80dip"/>
		<EditText android:id="@+id/username"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:inputType="textEmailAddress"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginTop="5dip" android:layout_marginRight="5dip">
		<TextView android:id="@+id/txv_password" android:text="Password"  android:layout_marginLeft="10dip" 
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="80dip"/>
		<EditText android:id="@+id/password"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:inputType="textPassword"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center" android:layout_marginTop="5dip" android:layout_marginRight="5dip">
		<Button android:text="Reset" android:id="@+id/btnreset"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="13dip" android:layout_marginLeft="5dip" android:width="70dip"
			android:onClick="onResetOnClick"/>
		<Button android:text="Login" android:id="@+id/btnsubmit"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="3dip" android:layout_weight="1" android:onClick="onSubmitOnClick"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center" android:layout_gravity="center" android:layout_marginTop="5dip">
		<TextView android:id="@+id/textRegist" android:text="@string/txt_register"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:layout_weight="2"/>
		<TextView android:id="@+id/textForget" android:text="@string/txt_forget"
			android:layout_marginLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center" android:layout_weight="2"/>
		<TextView android:id="@+id/textHelp" android:text="@string/txt_help"
			android:layout_marginLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1"/>
	</LinearLayout>
</LinearLayout>
