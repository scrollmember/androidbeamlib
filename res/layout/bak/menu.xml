<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/background">
	<Button android:id="@+id/btn_add_note" android:background="@drawable/note"
		android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
		android:layout_marginLeft="50dip" android:layout_alignParentLeft="true"
		android:layout_marginTop="30dip" android:layout_marginRight="25dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:id="@+id/txt_add_note" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Note" 
		android:layout_below="@id/btn_add_note" android:layout_marginLeft="65dip"
		android:layout_marginBottom="15dip" android:layout_marginRight="25dip" style="@style/menu_text_style"/>
	<Button android:id="@+id/btn_learninglog" android:background="@drawable/learninglog"
		android:layout_centerHorizontal="true" android:gravity="bottom"
		android:layout_toRightOf="@id/btn_add_note" android:layout_marginLeft="25dip"
		android:layout_marginTop="30dip" android:layout_marginRight="30dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:id="@+id/txt_learninglog"
		android:layout_toRightOf="@id/txt_add_note" android:layout_below="@id/btn_learninglog"
		android:layout_centerHorizontal="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="    Logs"
		android:layout_marginLeft="38dip" android:layout_marginBottom="15dip"
		android:layout_marginRight="30dip" style="@style/menu_text_style"/>
	<Button android:id="@+id/btn_quiz" android:background="@drawable/quiz"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/txt_add_note" android:layout_marginLeft="50dip"
		android:layout_marginTop="15dip" android:layout_marginRight="25dip" />
	<TextView android:id="@+id/txt_quiz" android:layout_width="wrap_content"
		android:layout_alignParentBottom="true" android:layout_height="wrap_content"
		android:text="  Quiz" android:layout_below="@id/btn_quiz"
		android:layout_marginLeft="60dip" android:layout_marginBottom="15dip"
		android:layout_marginRight="25dip" style="@style/menu_text_style"/>
	<Button android:id="@+id/btn_navigator" android:background="@drawable/navigator"
		android:layout_centerHorizontal="true" android:layout_toRightOf="@id/btn_quiz"
		android:layout_below="@id/txt_learninglog" android:layout_marginLeft="25dip"
		android:layout_marginTop="15dip" android:layout_marginRight="30dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:id="@+id/txt_navigator"
		android:layout_toRightOf="@id/txt_quiz" android:layout_below="@id/btn_navigator"
		android:layout_centerHorizontal="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="    Navigator"
		android:layout_marginLeft="35dip" android:layout_marginBottom="15dip"  android:layout_marginTop="7dip"
		android:layout_marginRight="30dip" style="@style/menu_text_style"/>
	<Button android:id="@+id/btn_system" android:background="@drawable/system" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/txt_navigator" android:layout_marginLeft="50dip"
		android:layout_marginTop="15dip" android:layout_marginRight="25dip" />
	<TextView android:id="@+id/txt_system" 	android:layout_below="@id/btn_system"
		android:layout_width="wrap_content"	android:layout_height="wrap_content" 
		android:layout_marginLeft="40dip" android:layout_marginTop="15dip" 
		android:layout_marginRight="25dip" android:text="@string/txt_system" style="@style/menu_text_style"/>
	<Button android:id="@+id/btn_helper" android:background="@drawable/manual" android:layout_centerHorizontal="true"
		android:layout_toRightOf="@id/btn_system"
		android:layout_below="@id/txt_navigator" android:layout_marginLeft="35dip"
		android:layout_marginTop="15dip" android:layout_marginRight="30dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<TextView android:id="@+id/txt_helper"
		android:layout_toRightOf="@id/txt_system" android:layout_below="@id/btn_helper"
		android:layout_centerHorizontal="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/txt_help" 
		android:layout_marginLeft="20dip" android:layout_marginBottom="15dip"  android:layout_marginTop="9dip"
		android:layout_marginRight="30dip" style="@style/menu_text_style"/>	
</RelativeLayout>
