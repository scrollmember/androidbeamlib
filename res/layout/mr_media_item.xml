<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView
		android:id="@+id/itemIcon"
		android:layout_width="80px"
		android:layout_height="60px"
		android:layout_margin="2px"
		android:layout_gravity="center" />
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<!-- <TextView android:id="@+id/itemTopText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20px" /> -->
		<TextView
			android:id="@+id/itemBottomText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:layout_marginTop="16px"
			android:layout_marginBottom="16px"
			android:textColor="#FFFFFF" />
	</LinearLayout>
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true">
	<Button
		android:id="@+id/mediaPlayButton"
		android:background="@drawable/mr_play"
		android:layout_width="64px"
		android:layout_height="64px"
		android:layout_marginRight="10px"
		android:layout_alignParentRight="true"
		android:gravity="center"
		android:focusable="false"/>
	</RelativeLayout>
</LinearLayout>